APP_NAME="Peepos SaaS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Lima
APP_URL=http://localhost:8000

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_PE

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Base de Datos Central (Tenants)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=peepos_central
DB_USERNAME=root
DB_PASSWORD=

# Broadcast, Cache, Queue, Session
BROADCAST_CONNECTION=log
CACHE_STORE=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Redis
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@peepos.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (si se usa S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_KEY_FILE=
GOOGLE_CLOUD_STORAGE_BUCKET=
GOOGLE_CLOUD_STORAGE_PATH_PREFIX=
GOOGLE_CLOUD_STORAGE_API_URI=

# Google APIs
GOOGLE_API_KEY=
GEMINI_API_KEY=

# WhatsApp Business API
WHATSAPP_API_URL=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=

# Firebase
FIREBASE_PROJECT_ID=
FIREBASE_CREDENTIALS=

# Tenancy Configuration (Stancl/Tenancy - Database per Tenant)
CENTRAL_DOMAIN=peepos.app
TENANCY_DATABASE_PREFIX=peepos_tenant_
TENANCY_DOMAIN_SUFFIX=.peepos.app
CENTRAL_DOMAINS=peepos.app,www.peepos.app,localhost

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_TENANT=1000

# Features
ENABLE_AI_IMPORT=true
ENABLE_WHATSAPP=true
ENABLE_QR_ATTENDANCE=true
ENABLE_ANALYTICS=true

# CORS
SANCTUM_STATEFUL_DOMAINS=localhost:5173,127.0.0.1:5173
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Vite
VITE_APP_NAME="${APP_NAME}"
