APP_NAME="Peepos SaaS"
APP_ENV=production
APP_KEY=${APP_KEY}
APP_DEBUG=false
APP_TIMEZONE=America/Lima
APP_URL=https://api.peepos.com

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_PE

# Logging en Google Cloud
LOG_CHANNEL=stackdriver
LOG_LEVEL=warning

# Cloud SQL (BD Central)
DB_CONNECTION=mysql
DB_HOST=/cloudsql/${CLOUD_SQL_CONNECTION_NAME}
DB_PORT=3306
DB_DATABASE=peepos_central
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}
DB_SOCKET=/cloudsql/${CLOUD_SQL_CONNECTION_NAME}

# Redis en Google Memorystore
CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
REDIS_CLIENT=predis
REDIS_HOST=${REDIS_HOST}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_PORT=6379

# Google Cloud Storage
FILESYSTEM_DISK=gcs
GOOGLE_CLOUD_PROJECT_ID=${GOOGLE_CLOUD_PROJECT_ID}
GOOGLE_CLOUD_KEY_FILE=/secrets/gcp-credentials.json
GOOGLE_CLOUD_STORAGE_BUCKET=${GOOGLE_CLOUD_STORAGE_BUCKET}

# Mail (SendGrid/Gmail/etc)
MAIL_MAILER=smtp
MAIL_HOST=${MAIL_HOST}
MAIL_PORT=587
MAIL_USERNAME=${MAIL_USERNAME}
MAIL_PASSWORD=${MAIL_PASSWORD}
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@peepos.com"
MAIL_FROM_NAME="${APP_NAME}"

# Google APIs
GOOGLE_API_KEY=${GOOGLE_API_KEY}
GEMINI_API_KEY=${GEMINI_API_KEY}

# WhatsApp Business API
WHATSAPP_API_URL=${WHATSAPP_API_URL}
WHATSAPP_ACCESS_TOKEN=${WHATSAPP_ACCESS_TOKEN}
WHATSAPP_PHONE_NUMBER_ID=${WHATSAPP_PHONE_NUMBER_ID}

# Firebase
FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID}
FIREBASE_CREDENTIALS=/secrets/firebase-credentials.json

# Tenancy
TENANCY_DATABASE_PREFIX=tenant_
TENANCY_DOMAIN_SUFFIX=.peepos.com
CENTRAL_DOMAINS=peepos.com,www.peepos.com,api.peepos.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_TENANT=2000

# Features
ENABLE_AI_IMPORT=true
ENABLE_WHATSAPP=true
ENABLE_QR_ATTENDANCE=true
ENABLE_ANALYTICS=true

# CORS
SANCTUM_STATEFUL_DOMAINS=${FRONTEND_URL}
CORS_ALLOWED_ORIGINS=${FRONTEND_URL}

# Session Security
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
